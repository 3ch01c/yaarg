package edu.nmt.cs.itweb;

import java.util.ArrayList;

/**
 * A map containing all player and non-player characters currently active in
 * the game as well as functions for adding and removing characters to the map.
 *
 */
public class GameMap {
	private ArrayList<GameCharacter> characters;
	
	public GameMap() {
		characters = new ArrayList<GameCharacter>();
	}
	
	public ArrayList<GameCharacter> getCharacters() {
		return characters;
	}
	
	public void add(GameCharacter character) {
		characters.add(character);
	}
	
	public void remove(GameCharacter character) {
		characters.remove(character);
	}
}
