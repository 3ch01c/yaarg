/* formval.css */
.info {
	color: black;
	background-color: transparent;
	font-weight: normal;
}

.valid {
	color: lightgreen;
	background-color: transparent;
	font-weight: bold;
}

.warn {
	color: orange;
	background-color: transparent;
	font-weight: bold;
}

.error {
	color: red;
	background-color: transparent;
	font-weight: bold
}

.formtab TD {
	padding: 0.2em;
	height: 2.5em;
	vertical-align: top;
	font-size: 90%;
}

/* checkboxes */
.checkcl {
	text-align: right;
}

.checkbox {
	clear: right;
	float: right;
	margin: 0 0.5em;
}

.formtab2 TD {
	padding: 0.2em;
	height: 2.5em;
	vertical-align: top;
}